{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "module": "commonjs",
        "target": "es6",
        "lib": [ "es5", "es6", "dom" ],
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "types": [
            "dom",
            "node"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "exclude": [
        "../node_modules"
    ]
}
